<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#457CA6"
    tools:context=".SonucEkrani">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="317dp"
        android:layout_height="52dp"
        android:layout_marginTop="73dp"
        android:background="@drawable/duzen"
        android:gravity="center"
        android:text="Sonuç Ekrani"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="107dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/duzen"
        android:gravity="center"
        android:text="plaka : "
        android:textColor="#F1EDED"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textViewSonucPlaka"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/duzen"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#EADBDB"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="292dp"
        android:background="@drawable/duzen"
        android:gravity="center"
        android:text="ücret : "
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewSonucUcret"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/duzen"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSonucPlaka"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonArsiveGit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_corner"
        android:text="arşiv"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonAnaEkranaGit"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonAnaEkranaGit"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        android:background="@drawable/button_corner"
        android:text="giriş ekranı"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewSonucUcret" />
</androidx.constraintlayout.widget.ConstraintLayout>