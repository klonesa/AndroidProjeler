<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9C4C682E"
    tools:context=".GirisEkrani">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/duzen"
        android:text="Giriş Ekranı"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/duzen"
        android:gravity="center"
        android:text="plaka :"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textViewPlaka"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/duzen"
        android:gravity="center"
        android:hint="plaka"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="59dp"
        android:background="@drawable/duzen"
        android:gravity="center"
        android:text="giriş saati :"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textViewSaat"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/duzen"
        android:gravity="center"
        android:hint="giris saati"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlaka"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonKaydet"
        android:layout_width="223dp"
        android:layout_height="68dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/button_corner"
        android:text="kaydet"
        app:layout_constraintBottom_toTopOf="@+id/buttonIptal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonIptal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button_corner"
        android:text="iptal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>